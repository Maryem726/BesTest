<form action="/kid" method="POST" autocomplete="off">
   <input type="hidden" name="_id" value="{{kid._id}}">
    <div class="form-group">
      <p>
        <label>LastName</label>
        <input type="text" class="form-control" name="lastname" placeholder="lastname" value="{{kid.lastname}}">
     </p>

    </div>

 <div class="form-group">
   <p>
        <label>FirstName</label>
        <input type="text" class="form-control" name="firstname" placeholder="firstname" value="{{kid.firstname}}">
  </p>
    </div>

    <div class="form-group">
      <p>
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="email" value="{{kid.password}}">
     </p>
    </div>

     <div class="form-group">
       <p>
        <label> Matricule</label>
        <input type="text" class="form-control" name="matricule" placeholder=" matricule" value="{{kid.matricule}}">
       </p>
    </div>

 <div class="form-group">
   <p>
        <label> Email</label>
        <input type="text" class="form-control" name="email" placeholder=" email" value="{{kid.email}}">
     </p>
    </div>


<div class="form-group">
  <p>
        <label> Address </label>
        <input type="text" class="form-control" name="address" placeholder=" address" value="{{kid.address}}">
      </p>
    </div>

    <div class="form-group">
      <p>
        <label> Birthday  </label>
        <input type="date" class="form-control" name="birthday" placeholder=" birthday" value="{{kid.birthday}}">
     </p>
    </div>

   <div class="form-group">
     <p>
        <label> Level  </label>
        <input type="number" class="form-control" name="level" placeholder=" level" value="{{kid.level}}">
   </p>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/kid/listK"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>