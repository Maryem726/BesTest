<h2>Formulaire d'ajout de parent</h2>

<form action="/parentR" method="POST" autocomplete="off">
   <input type="hidden" name="_id" value="{{parentR._id}}">
    <div class="form-group">
        <label>LastName</label>
        <input type="text" class="form-control" name="lastname" placeholder="lastname" value="{{parentR.lastname}}">

    </div>

 <div class="form-group">
        <label>FirstName</label>
        <input type="text" class="form-control" name="firstname" placeholder="firstname" value="{{parentR.firstname}}">

    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="email" value="{{parentR.password}}">
    </div>

     <div class="form-group">
        <label> Matricule</label>
        <input type="text" class="form-control" name="matricule" placeholder=" matricule" value="{{parentR.matricule}}">
    </div>

 <div class="form-group">
        <label> Email</label>
        <input type="text" class="form-control" name="email" placeholder=" email" value="{{parentR.email}}">
    </div>


<div class="form-group">
        <label> Address </label>
        <input type="text" class="form-control" name="address" placeholder=" address" value="{{parentR.address}}">
    </div>

<div class="form-group">
        <label> Rib bancaire  </label>
        <input type="number" class="form-control" name="rib" placeholder=" rib" value="{{parentR.rib}}">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/admin/listA"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>