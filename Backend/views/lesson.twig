<h2>Formulaire d'ajout</h2>

<form action="/lesson" method="POST"  enctype="multipart/form-data"  autocomplete="off">
   <input type="hidden" name="_id" value="{{lesson._id}}">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="title" placeholder="title" value="{{lesson.title}}">

    </div>

           <select
              className='subject'
              name='subject'
              value='subject'
              onChange={(e) => hundelchange(e)}
          >
            <option className='subject'>mathematique</option>
            <option className='subject'>arabic</option>
            <option className='subject'>french</option>
            <option className='subject'>english</option>
            <option className='subject'>social science</option>
            <option className='subject'>science of life and earth </option>
          </select>
    </div>


    <div class="form-group">
        <label>level</label>
        <input type="level" class="form-control" name="level" placeholder="email" value="{{lesson.level}}">
    </div>


 <div class="form-group">
        <label>price</label>
        <input type="price" class="form-control" name="price" placeholder="price" value="{{lesson.price}}">
    </div>



     <div class="form-group">
        <label>description</label>
        <input type="description" class="form-control" name="description" placeholder="description" value="{{lesson.description}}">
    </div>

<div class="form-group">
        <label for="type" class="text-white">type</label>
        <input type="file" name="type" id="type" class="form-control-file text-white" >

 </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
    </div>
</form>

